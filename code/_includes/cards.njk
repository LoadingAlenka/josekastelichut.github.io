{% set locale = page.url.split('/')[1] %}
<section id="{{ section.id }}">
  <h2 class="cards-title">{{ section.title | i18n }}</h2>
  <div class="cards">
    {% for card in section.cards %}
      <div class="card">
        {% if card.img %}
          <div class="card-image">
            <img src="{{ card.img }}" alt="{{ card.title | i18n }}">
          </div>
        {% endif %}
        <div class="card-content">
          <h1>{{ card.title | i18n }}</h1>
          <p>{{ card.text | i18n }}</p>
          {% if card.button %}
            <button class="hero-btn">{{ card.button | i18n }}</button>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>